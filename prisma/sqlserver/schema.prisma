// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model Users {
  id           String        @id @default(uuid()) @db.UniqueIdentifier
  avatar       String?
  account      String?
  username     String?
  password     String
  email        String?
  phone        String?
  role         String        @default("-")
  enabled      Boolean       @default(true)
  provider     String?
  sub          String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  sessions     Sessions[]
  userBalances UserBalances?
  UserModels   UserModels[]
  AuditLogs    RequestLogs[]
  Orders       Orders[]
  Chats        Chats[]
  Prompts      Prompts[]
}

model FileServices {
  id        String   @id @default(uuid()) @db.UniqueIdentifier
  name      String
  enabled   Boolean  @default(true)
  type      String
  configs   String   @default("{}") @db.NVarChar(2048)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ChatModels {
  id            String     @id @default(uuid()) @db.UniqueIdentifier
  modelProvider String
  modelVersion  String
  name          String
  isDefault     Boolean    @default(false)
  rank          Int?
  remarks       String?
  modelKeysId   String?    @db.UniqueIdentifier
  fileServiceId String?    @db.UniqueIdentifier
  fileConfig    String?    @default("{}") @db.NVarChar(2048)
  modelConfig   String     @default("{}") @db.NVarChar(2048)
  priceConfig   String     @default("{}") @db.NVarChar(2048)
  enabled       Boolean    @default(true)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  ModelKeys     ModelKeys? @relation(fields: [modelKeysId], references: [id])
  Chats         Chats[]
}

model Sessions {
  id        String   @id @default(uuid()) @db.UniqueIdentifier
  user      Users    @relation(fields: [userId], references: [id])
  userId    String   @db.UniqueIdentifier
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserModels {
  id        String   @id @default(uuid()) @db.UniqueIdentifier
  userId    String   @db.UniqueIdentifier
  models    String   @default("[]")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      Users    @relation(fields: [userId], references: [id])
}

model Chats {
  id              String         @id @default(uuid()) @db.UniqueIdentifier
  title           String         @db.NVarChar(50)
  userId          String         @db.UniqueIdentifier
  chatModelId     String?        @db.UniqueIdentifier
  userModelConfig String         @default("{}")
  isShared        Boolean        @default(false)
  isDeleted       Boolean        @default(false)
  createdAt       DateTime       @default(now())
  user            Users          @relation(fields: [userId], references: [id])
  chatModel       ChatModels?    @relation(fields: [chatModelId], references: [id])
  ChatMessages    ChatMessages[]
}

model ChatMessages {
  id              String   @id @default(uuid()) @db.UniqueIdentifier
  userId          String   @db.UniqueIdentifier
  chatId          String   @db.UniqueIdentifier
  parentId        String?  @db.UniqueIdentifier
  chatModelId     String?  @db.UniqueIdentifier
  role            String
  messages        String   @db.NText()
  calculatedPrice Decimal  @default(0)
  tokenUsed       Int      @default(0)
  createdAt       DateTime @default(now())
  chats           Chats    @relation(fields: [chatId], references: [id])
  // chatModel       ChatModels @relation(fields: [chatModelId], references: [id])
  // parent          ChatMessages?  @relation(fields: [parentId], references: [id])
  // ChatMessages    ChatMessages[]
}

model UserBalances {
  id        String   @id @default(uuid()) @db.UniqueIdentifier
  balance   Decimal  @default(0)
  userId    String   @unique @db.UniqueIdentifier
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      Users    @relation(fields: [userId], references: [id])
}

model BalanceLogs {
  id           String   @id @default(uuid()) @db.UniqueIdentifier
  userId       String   @db.UniqueIdentifier
  messageId    String?  @db.UniqueIdentifier
  createUserId String
  value        Decimal  @default(0)
  type         Int
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Orders {
  id           String   @id @default(uuid()) @db.UniqueIdentifier
  createUserId String   @db.UniqueIdentifier
  amount       Int
  outTradeNo   String
  status       String
  payH5Url     String?
  prepayId     String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         Users    @relation(fields: [createUserId], references: [id])
}

model Counterfoils {
  id        String   @id @default(uuid()) @db.UniqueIdentifier
  orderId   String   @db.UniqueIdentifier
  info      String   @db.NText()
  createdAt DateTime @default(now())
}

model LoginServices {
  id        String   @id @default(uuid()) @db.UniqueIdentifier
  type      String
  enabled   Boolean  @default(true)
  configs   String   @default("{}") @db.NVarChar(2048)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserSms {
  id        String   @id @default(uuid()) @db.UniqueIdentifier
  type      String
  status    String
  code      String
  createdAt DateTime @default(now())
}

model PayServices {
  id        String   @id @default(uuid()) @db.UniqueIdentifier
  type      String
  enabled   Boolean  @default(true)
  configs   String   @db.NText()
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model RequestLogs {
  id           String   @id @default(uuid()) @db.UniqueIdentifier
  ip           String?
  userId       String?  @db.UniqueIdentifier
  url          String
  method       String
  statusCode   Int
  responseTime String
  requestTime  String
  headers      String?  @db.NText()
  request      String?  @db.NText()
  response     String?  @db.NText()
  createdAt    DateTime @default(now())
  user         Users?   @relation(fields: [userId], references: [id])
}

model ModelKeys {
  id         String       @id @default(uuid()) @db.UniqueIdentifier
  name       String       @db.NVarChar(100)
  type       String       @db.NVarChar(50)
  configs    String       @db.NVarChar(2048)
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  ChatModels ChatModels[]
}

model Prompts {
  id           String   @id @default(uuid()) @db.UniqueIdentifier
  name         String   @db.NVarChar(100)
  type         Int      @db.SmallInt
  content      String?  @db.NVarChar(2048)
  description  String?  @db.NVarChar(100)
  createUserId String   @db.UniqueIdentifier
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         Users?   @relation(fields: [createUserId], references: [id])
}
